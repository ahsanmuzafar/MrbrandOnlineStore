@model Mr.brand_store.Models.user
@{
    ViewBag.Title = "signin";
}
    
           
            <div class="col-xs-12 col-md-2 col-lg-2">
                </div>
    	    <div class="col-xs-12 col-md-4   col-lg-4">
        	    <div class="form-wrap">
                     <h3 style="text-align:center">Log in </h3>
                    
                
                    <br /><br />
                    <form role="form" action="/Home/login" method="post" id="login-form" >
                        <div class="form-group">
                            <label for="email" class="sr-only">Email</label>                      
                            @Html.TextBoxFor(user=>user.email, new { @class = "form-control", required="required",placeholder="Enter Email Address" ,@type="email" })
                            
                        </div>
                        <div class="form-group">
                            <label for="key" class="sr-only">Password</label>
                            @Html.TextBoxFor(user=>user.passwd, new { @class = "form-control" , required="required",placeholder="Enter your password ",@type="password"})
                        </div>
                        <br />
                        <input type="submit" id="btn-login" class="btn btn-primary btn-lg btn-block" value="Log in">
                    </form>
                    <hr>
                    <br />
                        </div>
        	    
                <a href="/Home/Register" class="btn btn-danger" >Register</a>
    		</div> <!-- /.col-xs-12 -->
   
