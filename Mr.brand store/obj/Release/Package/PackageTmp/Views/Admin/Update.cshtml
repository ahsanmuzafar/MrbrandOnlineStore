@model Mr.brand_store.Models.Product
@{
    ViewBag.Title = "Update";
}
<h2>Update product</h2>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-xs-3 col-sm-2">
                 @using (Html.BeginForm("UpdateConfrim", "Admin", new { Id = @Model.Id }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                        <div class="form-group">
                            @Html.Label("File",new {@class ="col-md-2 col-xs-2 col-sm-2 control-label"})
                            <div class="col-md-10 col-xs-10 col-sm-10">
                              <input type="file" name="file" class="form-control"/>
                            </div>
                        </div>
                    <div class="form-group">
                        @Html.Label("Name",new {@class ="col-md-2 col-xs-2 col-sm-2 control-label"})
                        <div class="col-md-10 col-xs-10 col-sm-10">
                            @Html.TextBoxFor(Product =>Product.name, new { @class = "form-control" , value="@Model.name" })
                        </div>
                    </div>
                <div class="form-group">
                        @Html.Label("Price",new {@class ="col-md-2 col-xs-2 col-sm-2 control-label"})
                        <div class="col-md-10 col-xs-10 col-sm-10">
                            @Html.TextBoxFor(Product=>Product.price, new { @class = "form-control",value="@Model.price" })
                        </div>
                    </div>
                <div class="form-group">
                        @Html.Label("Type",new {@class ="col-md-2 col-xs-2 col-sm-2 control-label"})
                        <div class="col-md-10 col-xs-10 col-sm-10">
                            @Html.TextBoxFor(Product =>Product.type, new { @class = "form-control", value="@Model.type" })
                        </div>
                    </div>      
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10 col-xs-offset-2 col-xs-10 col-sm-offset-2 col-sm-10">
                            <input type="submit" class="btn btn-default" value="Update" />
                        </div>
                    </div>
                }
        </div>
    </div>
</div>
